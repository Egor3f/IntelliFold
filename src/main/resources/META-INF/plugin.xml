<idea-plugin>
    <id>com.github.gillesmoris.intellifold</id>
    <name>intellifold</name>
    <vendor>gillesmoris</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="intellifold-withJava.xml">com.intellij.modules.java</depends>
    <depends optional="true" config-file="intellifold-withJavaScript.xml">JavaScript</depends>

    <actions>
        <group id="org.intellij.sdk.action.GroupedActions"
               class="com.github.gillesmoris.intellifold.actions.SplitFoldActionGroup"
               text="Intellifold"
               popup="true"
               compact="true"
               icon="/icons/intellifold.svg">
            <add-to-group group-id="ToolbarRunGroup" anchor="first"/>
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.github.gillesmoris.intellifold.services.ConfigurationPersistentStateComponent"/>
        <applicationService serviceImplementation="com.github.gillesmoris.intellifold.settings.AppSettingsState"/>
        <applicationConfigurable parentId="tools"
                                 instance="com.github.gillesmoris.intellifold.settings.AppSettingsConfigurable"
                                 id="com.github.gillesmoris.intellifold.settings.AppSettingsConfigurable"
                                 displayName="Intellifold"/>
    </extensions>
</idea-plugin>
