<idea-plugin>
    <id>com.github.gillesmoris.intellifold</id>
    <name>intellifold</name>
    <vendor>gillesmoris</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="intellifold-withJava.xml">com.intellij.modules.java</depends>
    <depends optional="true" config-file="intellifold-withJavaScript.xml">JavaScript</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.gillesmoris.intellifold.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.gillesmoris.intellifold.services.MyProjectService"/>
        <applicationService
                serviceImplementation="com.github.gillesmoris.intellifold.services.ConfigurationPersistentStateComponent"/>
        <applicationService serviceImplementation="com.github.gillesmoris.intellifold.settings.AppSettingsState"/>
        <applicationConfigurable parentId="tools" instance="com.github.gillesmoris.intellifold.settings.AppSettingsConfigurable"
                                 id="com.github.gillesmoris.intellifold.settings.AppSettingsConfigurable"
                                 displayName="Intellifold: Application Settings Example"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.gillesmoris.intellifold.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
