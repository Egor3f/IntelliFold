<idea-plugin>
    <id>com.github.gillesmoris.intellifold</id>
    <name>intellifold</name>
    <vendor>gillesmoris</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.gillesmoris.intellifold.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.gillesmoris.intellifold.services.MyProjectService"/>
        <lang.foldingBuilder language="JAVA"
                             implementationClass="com.github.gillesmoris.intellifold.listeners.RegexFoldingBuilder"/>
        <applicationService serviceImplementation="com.github.gillesmoris.intellifold.services.ConfigurationPersistentStateComponent"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.gillesmoris.intellifold.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
