<idea-plugin>
    <id>com.github.gillesmoris.intellifold</id>
    <name>intellifold</name>
    <vendor>gillesmoris</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="intellifold-withJava.xml">com.intellij.modules.java</depends>
    <depends optional="true" config-file="intellifold-withJavaScript.xml">JavaScript</depends>

    <actions>
        <group id="org.intellij.sdk.action.GroupedActions"
               text="Intellifold"
               popup="true"
               icon="/icons/intellifold_off.svg">
            <add-to-group group-id="ToolbarRunGroup" anchor="last"/>
            <action id="ToggleFoldingAction"
                    class="com.github.gillesmoris.intellifold.actions.ToggleFoldingAction">
            </action>
            <action id="ConfigureFoldingAction"
                    class="com.github.gillesmoris.intellifold.actions.ConfigureFoldingAction">
            </action>
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.gillesmoris.intellifold.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.gillesmoris.intellifold.services.MyProjectService"/>
        <applicationService
                serviceImplementation="com.github.gillesmoris.intellifold.services.ConfigurationPersistentStateComponent"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.gillesmoris.intellifold.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
